{
  "name": "tw",
  "scripts": {
    "build": "npm run css:build && npm run js:build",
    "css:dev": "postcss src/css/app.css -o public/build/css/app.css",
    "css:build": "cross-env NODE_ENV=production postcss src/css/app.css -o public/build/css/app.css",
    "js:dev": "babel src/js -d public/build/js",
    "js:build": "cross-env NODE_ENV=production babel src/js -d public/build/js",
    "watch": "npm-watch",
    "serve": "npm run watch & reload -b -d public"
  },
  "watch": {
    "css:dev": {
      "patterns": [
        "./tailwind.config.js",
        "src/css/"
      ],
      "extensions": "css"
    },
    "js:dev": "src/js/**/*.js"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-minify": "^0.5.1",
    "cssnano": "^4.1.10",
    "postcss-nested": "^4.2.3",
    "reload": "^3.1.0",
    "autoprefixer": "^9.8",
    "npm-watch": "^0.6",
    "postcss-cli": "^7.1",
    "tailwindcss": "^1.5",
    "cross-env": "^7.0"
  },
  "browserslist": [
    "defaults"
  ]
}
