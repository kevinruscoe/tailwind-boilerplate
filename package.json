{
  "name": "tw",
  "scripts": {
    "build": "cross-env NODE_ENV=production postcss css/app.css -o public/css/app.css",
    "dev": "postcss css/app.css -o public/css/app.css",
    "watch": "npm-watch"
  },
  "watch": {
    "dev": {
      "patterns": [
        "./tailwind.config.js",
        "css/"
      ],
      "extensions": "css"
    }
  },
  "dependencies": {
    "autoprefixer": "^9.8",
    "npm-watch": "^0.6",
    "postcss-cli": "^7.1",
    "tailwindcss": "^1.5",
    "cross-env": "^7.0"
  }
}
