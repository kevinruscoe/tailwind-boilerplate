{
  "dependencies": {
    
  },
  "scripts": {
    "images:setup": "ln -s $(pwd)/src/img ./dist/img",
    "js:dev": "rollup -c",
    "js:watch": "rollup -c -w",
    "css:dev": "npx tailwindcss -i ./src/main.css -o ./dist/bundle.css",
    "css:watch": "npx tailwindcss -i ./src/main.css -o ./dist/bundle.css --watch",
    "http:serve": "python -m SimpleHTTPServer 7654",
    "dev:watch": "npm run http:serve & open http://0.0.0.0:7654 & npm run js:watch & npm run css:watch",
    "build": "NODE_ENV=production npx tailwindcss -i ./src/css/style.css -o ./public/dist/style.css --minify"
  },
  "devDependencies": {
    "alpinejs": "^3.9.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "@babel/preset-env": "^7.16.11",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.0.23"
  }
}
